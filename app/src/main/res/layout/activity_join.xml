<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.etherealtherapist.Activities.JoinActivity"
    android:orientation="vertical"
    android:background="@color/dark_lavender2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="120dp"
            android:fontFamily="@font/lato"
            android:text="Join us."
            android:textColor="@color/pale_pink"
            android:textSize="40dp" />

        <EditText
            android:id="@+id/namenickname"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/roundedrectangle"
            android:fontFamily="@font/lato"
            android:hint="Name/nickname"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:padding="20dp"
            android:textColor="@color/pale_pink"
            android:textColorHint="@color/pale_pink"
            android:textCursorDrawable="@drawable/custom_cursor"
            android:textSize="13dp" />

        <EditText
            android:id="@+id/emailjoin"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/roundedrectangle"
            android:fontFamily="@font/lato"
            android:hint="Email ID"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:padding="20dp"
            android:textColor="@color/pale_pink"
            android:textColorHint="@color/pale_pink"
            android:textCursorDrawable="@drawable/custom_cursor"
            android:textSize="13dp" />


        <EditText
            android:id="@+id/passwordjoin"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/roundedrectangle"
            android:fontFamily="@font/lato"
            android:hint="Password (min 8 characters)"
            android:inputType="textPassword"
            android:maxLines="1"
            android:padding="20dp"
            android:textColor="@color/pale_pink"
            android:textColorHint="@color/pale_pink"
            android:textCursorDrawable="@drawable/custom_cursor"
            android:textSize="13dp" />

        <Button
            android:id="@+id/submitjoin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/roundedcircle"
            android:padding="10dp"
            android:text="CONTINUE"
            android:textSize="15dp"
            android:textColor="@color/dark_lavender"
            app:backgroundTint="@color/pale_pink" />

        <TextView
            android:id="@+id/alreadyjoin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/lato"
            android:text="Already have an account? Sign in."
            android:textColor="@color/pale_pink"
            android:textSize="13dp" />


    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyleLarge"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:indeterminateTintMode="src_atop"
        android:indeterminateTint="@color/lavender"/>

    <TextView
        android:id="@+id/termsandpolicy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom"
        android:fontFamily="@font/lato"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:text="By signing up, you agree to Ethereal's Terms &amp; Conditions\nand Privacy Policy. "
        android:textColor="@color/pale_pink"
        android:textSize="10dp"
        tools:ignore="HardcodedText" />


</RelativeLayout>