<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.etherealtherapist.Activities.ForgotActivity"
    android:orientation="vertical"
    android:background="@color/dark_lavender2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/forgotback"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardBackgroundColor="@android:color/transparent"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="17dp"
            app:cardCornerRadius="100dp"
            app:cardElevation="0dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:background="@drawable/back"
                android:backgroundTint="@color/pale_pink" />
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/lato_bold"
            android:text="Forgot your password?"
            android:textColor="@color/pale_pink"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/forgotdesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/lato"
            android:text="@string/forgotdesc"
            android:textColor="@color/pale_pink"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/forgotemail"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/roundedrectangle"
            android:fontFamily="@font/lato"
            android:hint="Email ID"
            android:inputType="textEmailAddress"
            android:padding="20dp"
            android:textColor="@color/pale_pink"
            android:textColorHint="@color/pale_pink"
            android:backgroundTint="@color/lavender"
            android:textCursorDrawable="@drawable/custom_cursor"
            android:textSize="13dp" />


        <Button
            android:id="@+id/forgotreset"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/roundedcircle"
            android:padding="10dp"
            android:text="RESET PASSWORD"
            android:textColor="@color/dark_lavender"
            android:textSize="15dp"
            app:backgroundTint="@color/pale_pink" />


    </LinearLayout>

    <ProgressBar
        android:id="@+id/forgotprogressbar"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyleLarge"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:indeterminateTintMode="src_atop"
        android:indeterminateTint="@color/lavender"/>

</RelativeLayout>